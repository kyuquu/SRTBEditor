{
    "dropdowns": {
        "tb-load": {
            "text": "LOAD",
            "options": [
                {
                    "text": "CREATE NEW",
                    "function": "loadTemplate('Custom.srtb')"
                },
                {
                    "text": "FROM FILE",
                    "function": "fileInput.click()"
                },
                {
                    "text": "FROM LINK",
                    "function": ""
                }
            ]
        },
        "tb-save": {
            "text": "SAVE",
            "options": [
                {
                    "text": "SAVE AS .SRTB",
                    "function": "saveAsSRTB()"
                },
                {
                    "text": "SAVE AS .JSON",
                    "function": "saveAsJSON()"
                },
                {
                    "text": "SAVE AS .ZIP",
                    "function": "saveAsZIP()"
                }
            ]
        }
    },
    "buttons": {
        "jv-save": {
            "text": "SAVE CHANGES",
            "function": "saveEditorChanges()"
        },
        "jv-discard": {
            "text": "DISCARD CHANGES",
            "function": "discardEditorChanges()"
        }
    },
    "text-inputs": {
        "bv-title": {
            "text": "Title",
            "function": "processBVInput('text', 'title')"
        },
        "bv-subtitle": {
            "text": "Subitle",
            "function": "processBVInput('text', 'subtitle')"
        },
        "bv-artist": {
            "text": "Artist",
            "function": "processBVInput('text', 'artist')"
        },
        "bv-featured-artist": {
            "text": "Featured Artist",
            "function": "processBVInput('text', 'featured-artist')"
        },
        "bv-charter": {
            "text": "Charter",
            "function": "processBVInput('text', 'charter')"
        }
    },
    "checkboxes": {
        "bv-allow-custom-leaderboards": {
            "text": "Allow Leaderboard Creation",
            "function": "processBVInput('checkbox', 'allow-custom-leaderboards')"
        }
    },
    "file-inputs": {
        "bv-album-art": {
            "text": "Album Art",
            "accept": ".png, .jpg, .jpeg",
            "function": "updateAlbumArt(this)"
        }
    }
}